@model IEnumerable<installer_site_SK.Models.Admin.OrderListItemViewModel>
@{
    ViewData["Title"] = "Заказы";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Заказы</h3>
    <a class="btn btn-success" href="/admin/create-order">Создать заказ</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">Пока нет заказов.</div>
}
else
{
    <table class="table table-bordered table-hover align-middle">
        <thead>
            <tr>
                <th style="width:80px;">ID</th>
                <th>Название</th>
                <th style="width:160px;">Статус</th>
                <th style="width:260px;">Работник</th>
                <th style="width:200px;">Создан</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in Model)
            {
                <tr>
                    <td>@o.Id</td>
                    <td>
                        <a href="/admin/orders/@o.Id">@o.Title</a>
                    </td>
                    <td>@o.Status</td>
                    <td>@o.WorkerEmail</td>
                    <td>@o.CreatedAtUtc.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}