@model IEnumerable<installer_site_SK.Models.Admin.UserListItemViewModel>
@using installer_site_SK.Infrastructure

@{
    ViewData["Title"] = "Пользователи";
    Layout = "_AdminLayout";
}

<h3>Пользователи</h3>

<a class="btn btn-primary mb-3" href="/admin/create-user">Создать пользователя</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Email</th>
            <th>Роли</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Email</td>
                <td>
                    @foreach (var r in u.Roles)
                    {
                        <span class="badge bg-secondary me-1">@RoleNames.ToRu(r)</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>